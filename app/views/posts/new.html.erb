<%= render "layouts/navbar" %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2>Nuevo Post</h2>
            <%= form_for @post do |f| %>
                <% if @post.errors.any? %>
                    <div class="alert alert-danger alert-block alert-fized">
                        <ul>
                            <% @post.errors.full_messages.each do |msg|%>
                                <li> <%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="form-group">
                    <label for="exampleFormControlInput1">TÃ­tulo</label>
                    <%= f.text_field :titulo, class: "form-control"  %>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Cuerpo</label>
                    <%= f.text_area :cuerpo, class: "form-control", cols: "30", rows: "10" %>
                </div>
                <div>
                    <%= f.button "Crear Post", class: "btn btn-primary"%>
                </div>
            <% end %>
        </div>
    </div>
</div>